# Chrony configuration for PXE Server
# Generated by Ansible

# NTP servers
server 0.rocky.pool.ntp.org iburst
server 1.rocky.pool.ntp.org iburst
server 2.rocky.pool.ntp.org iburst
server 3.rocky.pool.ntp.org iburst

# Allow NTP client access from local network
allow {{ pxe_network }}

# Record the rate at which the system clock gains/losses time
driftfile /var/lib/chrony/drift

# Enable kernel synchronization of the real-time clock (RTC)
rtcsync

# Enable hardware timestamping on all interfaces that support it
hwtimestamp *

# Increase the minimum number of selectable sources required to adjust
# the system clock
minsources 2

# Record a measurement of the system clock performance
makestep 1.0 3

# Enable kernel RTC synchronization
rtcsync

# Log settings
log measurements statistics tracking

# Log file location
logdir /var/log/chrony
